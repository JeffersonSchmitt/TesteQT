@model TesteQT.Models.Process

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Processo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProcessCode" class="control-label">Código do processo</label>
                <input asp-for="ProcessCode" class="form-control" />
                <span asp-validation-for="ProcessCode" class="text-danger"></span>
            </div>
           <div class="form-group" style="margin-top:15px">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a  style="margin-left:15px" class="btn btn-primary" asp-action="Index">Voltar ao inicio</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
