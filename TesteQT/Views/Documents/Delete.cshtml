@model TesteQT.Models.Document

@{
    ViewData["Title"] = "Delete";
}

<h1>Deseja realmente deletar este documento?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Codigo do documento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DocumentCode)
        </dd>
        <dt class = "col-sm-2">
           Titulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
           Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            Caminho do Arquivo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Files)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a  style="margin-left:15px" class="btn btn-primary" asp-action="Index">Voltar ao inicio</a>
    </form>
</div>
